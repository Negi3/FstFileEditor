<Window x:Class="FstFileEditor.opacityChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="透明度設定-FFE-" Height="145" Width="338" Loaded="Window_Loaded">
    <Grid Height="94">
        <Label Content="透明度:0" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Width="71" Margin="110,0,0,0" />
        <Slider Height="32" HorizontalAlignment="Left" Margin="12,33,0,0" Name="slider1" VerticalAlignment="Top" Width="285" ValueChanged="slider1_ValueChanged" Maximum="80" />
        <Label Content="←不透明" Height="28" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="透明→" Height="28" HorizontalAlignment="Left" Margin="239,0,0,0" Name="label3" VerticalAlignment="Top" />
        <Button Content="設定完了して閉じる" Height="23" HorizontalAlignment="Stretch" Margin="0,71,0,0" Name="button1" VerticalAlignment="Top" Click="button1_Click" />
    </Grid>
</Window>
